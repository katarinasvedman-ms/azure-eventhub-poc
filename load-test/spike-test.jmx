          <stringProp name="scriptLanguage">groovy</stringProp>
          <stringProp name="script">
import groovy.json.JsonOutput

def batchSize = vars.get("batchSize") as int
def events = []

for (int i = 0; i &lt; batchSize; i++) {
    def evt = [
        message    : "Spike test event ${UUID.randomUUID()}",
        source     : "SpikeTest-Batch",
        level      : ["Information", "Warning", "Error", "Debug"][new Random().nextInt(4)],
        partitionKey: "spike-user-${new Random().nextInt(1000)}"
    ]
    events.add(evt)
}

def payload = JsonOutput.toJson([events: events])
vars.put("requestBody", payload)
          </stringProp>
